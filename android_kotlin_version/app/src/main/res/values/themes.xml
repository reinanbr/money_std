<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Tema Light - Usando AppCompat para compatibilidade -->
    <style name="Theme.MoneyStd" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Cores Principais -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary</item>
        <item name="colorAccent">@color/accent</item>
        
        <!-- Backgrounds -->
        <item name="android:colorBackground">@color/background_light</item>
        <item name="android:textColor">@color/text_light</item>
        
        <!-- Status Bar -->
        <item name="android:statusBarColor">@color/background_light</item>
        <item name="android:windowLightStatusBar">true</item>
        
        <!-- Navigation Bar -->
        <item name="android:navigationBarColor">@color/surface_light</item>
        <item name="android:windowLightNavigationBar">true</item>
        
        <!-- Window -->
        <item name="android:windowBackground">@color/background_light</item>
    </style>

    <!-- Tema para Splash Screen -->
    <style name="Theme.MoneyStd.Splash" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="windowSplashScreenBackground">@color/primary</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/logo_app</item>
        <item name="windowSplashScreenAnimationDuration">2000</item>
        <item name="postSplashScreenTheme">@style/Theme.MoneyStd</item>
    </style>

    <!-- Estilos de Card com elevação igual ao React Native -->
    <style name="CardStyle">
        <item name="android:background">@color/card_light</item>
        <item name="android:elevation">4dp</item>
        <item name="android:padding">16dp</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <!-- Estilo de Texto Principal -->
    <style name="TextPrimary">
        <item name="android:textColor">@color/text_light</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <!-- Estilo de Texto Secundário -->
    <style name="TextSecondary">
        <item name="android:textColor">@color/text_secondary_light</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <!-- Estilo de Botão Primary -->
    <style name="ButtonPrimary" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/primary</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Estilo de Botão Secondary -->
    <style name="ButtonSecondary" parent="Widget.Material3.Button.OutlinedButton">
        <item name="strokeColor">@color/primary</item>
        <item name="android:textColor">@color/primary</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:textAllCaps">false</item>
    </style>
</resources>
